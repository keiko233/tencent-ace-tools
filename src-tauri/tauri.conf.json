{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tencent-ace-tools-tauri",
  "version": "0.1.0",
  "identifier": "moe.elaina.tencent-ace-tools",
  "build": {
    "beforeDevCommand": "pnpm ui:dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm ui:build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Tencent Ace Tools",
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
